#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>
set -e

BUILD_DIR=$1
CACHE_DIR=$2

LP_DIR=`cd $(dirname $0); cd ..; pwd`
cd $BUILD_DIR

echo "-----> $BUILD_DIR"

sudo apt-get install llvm build-essential clang python-dev libc++-dev cmake libxml++

cd release && cmake . && make

echo "-----> Compilation done"
